<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEDCDB">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:elevation="4dp"
                android:minHeight="?attr/actionBarSize"
                android:theme="?attr/actionBarTheme">



                <ImageButton
                    android:id="@+id/ibUser"
                    android:layout_width="59dp"
                    android:layout_height="56dp"
                    android:background="#FFFFFF"
                    android:layout_marginStart="290dp"
                    app:srcCompat="@drawable/user"
                    tools:ignore="SpeakableTextPresentCheck" />

                <ImageButton
                    android:id="@+id/ibShopCart"
                    android:layout_width="57dp"
                    android:layout_height="56dp"
                    android:background="#FFFFFF"
                    app:srcCompat="@drawable/shopping_cart"
                    tools:ignore="SpeakableTextPresentCheck" />

            </androidx.appcompat.widget.Toolbar>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="350dp"
                android:layout_height="417dp"
                android:layout_gravity="center|center_vertical"
                android:background="#FFFFFF"
                android:textAlignment="center"
                />


            <!-- list_item_product.xml -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">


                <LinearLayout
                    android:id="@+id/botoneraPagar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/product_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Product Name"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/product_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Product Price"
                        android:textSize="22sp"
                        android:textStyle="bold" />


                    <!-- activity_main.xml -->
                    <LinearLayout
                        android:id="@+id/cantidadbotonera"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/cantidad"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cantidad "
                            android:textSize="22sp"
                            android:textStyle="bold" />

                        <Space
                            android:layout_width="2dp"
                            android:layout_height="2dp" />


                        <Space
                            android:layout_width="44dp"
                            android:layout_height="26dp" />


                        <Button
                            android:id="@+id/btnAdd"
                            android:layout_width="90dp"
                            android:layout_height="50dp"
                            android:background="@drawable/semi_rounded_border_left"
                            android:text="+"
                            android:textColor="#FFFFFF"
                            android:textSize="24sp" />

                        <Space
                            android:layout_width="2dp"
                            android:layout_height="2dp" />

                        <Button
                            android:id="@+id/btnRemove"
                            android:layout_width="90dp"
                            android:layout_height="50dp"
                            android:background="@drawable/semi_rounded_border_right"
                            android:text="-"
                            android:textColor="#FFFFFF"
                            android:textSize="24sp" />

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>










            <Space
                android:layout_width="32dp"
                android:layout_height="29dp" />

            <TextView
                android:id="@+id/total"
                android:layout_width="418dp"
                android:layout_height="46dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:background="@drawable/rounded_corner_white"
                android:color="#FFFFFF"
                android:gravity="center"
                android:text="Total "
                android:textSize="24sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="29dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Space
                    android:layout_width="35dp"
                    android:layout_height="50dp" />

                <Button
                    android:id="@+id/btnPagarP"
                    android:layout_width="152dp"
                    android:layout_height="53dp"
                    android:background="@drawable/rounded_corner"
                    android:color="#FD788D"
                    android:text="Pagar"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <Space
                    android:layout_width="72dp"
                    android:layout_height="50dp" />


                <Button
                    android:id="@+id/btnCancelarP"
                    android:layout_width="151dp"
                    android:layout_height="54dp"
                    android:background="@drawable/rounded_corner"
                    android:color="#FD788D"
                    android:text="Regresar"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp"
                    android:textStyle="bold" />

            </LinearLayout>
            <Space
                android:layout_width="100dp"
                android:layout_height="30dp"
                />

            <Space
                android:layout_width="50dp"
                android:layout_height="20dp"
                />

        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>